        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Name="btnStart" Margin="50" Content="Start Server" Width="100" Height="25" Click="BtnStart_Click" ></Button>
        <Button Margin="10" Content="Send Hello" Width="100" Height="25"></Button>
    </StackPanel>
</Window>
